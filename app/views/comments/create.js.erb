post = document.getElementById("comments-post-<%= @post.id %>");

post.insertAdjacentHTML("beforeend", "<%= j render 'shared/post_with_comments', comment: @comment %>");

comment = document.getElementById("comment-<%= @comment.id %>");

comment.querySelector("button");

comment.querySelector("button").addEventListener("click", (event) => {
  const hiddenDiv = document.getElementById(`edit-form-${event.currentTarget.dataset.id}`);
  hiddenDiv.classList.toggle("hidden");
});

document.getElementById("new_comment").reset();
