<div class="container my-3">
  <div class="container-nav text-right">
    <% if @group.user == current_user %>
      <%= link_to "Delete", group_path(@group), method: :delete, data: { confirm: "Are you sure?" } %>
      <%= link_to "Edit", edit_group_path(@group) %>
    <% end %>

    <% unless current_user.participating_groups.include?(@group) || @group.user == current_user %>
      <%= link_to "Join group", join_group_path(@group), method: :post %>
    <% end %>

    <% if current_user.participating_groups.include?(@group) %>
          <%= link_to "Leave group", leave_group_path(@group), method: :delete %>
    <% end %>
  </div>

  <div class="group-info d-flex">
    <div>
      <%= cl_image_tag @group.badge.key, width: 150, height: 150 %>
    </div>
    <div class="flex-grow-1 px-3">
      <h2><%= @group.name %></h2>
      <p><%= @group.description %></p>
      <% if @group.location.present? %>
        <p>üìç <%= @group.location %></p>
      <% end %>
      <% if @group.private? %>
        <em>Private Group</em>
      <% end %>
    </div>
  </div>

</div>
