<div class="banner d-flex align-items-end" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @grow.photo.key %>')">
  <div class="container text-white">
    <h2><%= @grow.name %></h2>
  </div>
</div>

<div class="container-profile">
  <div class="container-header d-flex my-3">
    <div>
      Grown by
    </div>
    <div class="flex-grow-1 text-center">
      <p><%= @grow.description %></p>
      <p>📍 <%= @grow.location %></p>
    </div>
    <div>
      <% if @grow.user == current_user %>
        <%= link_to "Delete", grow_path(@grow), method: :delete, data: { confirm: "Are you sure?" } %>
        <%= link_to "Edit", edit_grow_path(@grow) %>
      <% end %>
    </div>
  </div>

  <div class="container-content my-3 text-center">
    <% if @grow.plants.empty? %>
      <h2>🧐 No plants here... <%= link_to "wanna add one?", new_grow_plant_path(@grow) %></h2>
    <% else %>
      <h2>Here's what we're growing...</h2>
    <% end %>
    <% @grow.plants.each do |plant| %>
      <h4><%= plant.name %></h4>
      <p><%= plant.family %></p>
      <p><%= plant.species %></p>
      <p><%= plant.genre %></p>
      <p><%= plant.birthday %></p>
      <p><%= plant.harvestday %></p>
      <%= link_to "Delete", plant_path(plant), method: :delete, data: { confirm: "Are you sure?" } %>
      <%= link_to "Edit", edit_plant_path(plant) %>
    <% end %>
  </div>
</div>
