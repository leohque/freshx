<h2>Grow show</h2>

<%= link_to "Back to User", user_profile_path(@grow.user) %>

<% if @grow.photo.attached? %>
  <%= cl_image_tag @grow.photo.key, width:500, height:500 %>
<% end %>

<h4>Name: <%= @grow.name %></h4>
<p>Description: <%= @grow.description %></p>
<p>Location: <%= @grow.location %></p>
<p>Indoors: <%= @grow.indoors %></p>

<%= link_to "Delete", grow_path(@grow), method: :delete, data: { confirm: "Are you sure?" } %>
<%= link_to "Edit", edit_grow_path(@grow) %>
<%= link_to "Add plant", new_grow_plant_path(@grow) %>



<h2>Plants index</h2>
<% @grow.plants.each do |plant| %>
  <h4><%= plant.name %></h4>
  <p><%= plant.family %></p>
  <p><%= plant.species %></p>
  <p><%= plant.genre %></p>
  <p><%= plant.birthday %></p>
  <p><%= plant.harvestday %></p>
  <%= link_to "Delete", plant_path(plant), method: :delete, data: { confirm: "Are you sure?" } %>
  <%= link_to "Edit", edit_plant_path(plant) %>
<% end %>

