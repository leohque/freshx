<div class="container">
  <% if current_user.photo.attached? %>
    <%= cl_image_tag current_user.photo.key, width:150, height:150, class: 'mr-3' %>
  <% else %>
    <%= image_tag("anon.jpg", width:150, height:150, class: 'mr-3') %>
  <% end %>
  <h3 class="mt-3">
    <%= @user.username %>
  </h3>
  <h4>📍 <%= @user.location %></h4>
    <p><%= @user.bio %></p>
</div>

<% if @user == current_user %>
  <%= link_to "Edit", edit_profile_path %>
<% end %>

